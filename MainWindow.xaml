<Window x:Class="WDN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dynamic Notch" Height="100" Width="500"
        Topmost="True"
        WindowStyle="None" AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Window.Background>
        <VisualBrush>
            <VisualBrush.Visual>
                <Rectangle Fill="#80000000" Width="1" Height="1">
                    <Rectangle.Effect>
                        <BlurEffect Radius="10"/>
                    </Rectangle.Effect>
                </Rectangle>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>
    
    <Window.Resources>
        <Style x:Key="TransparentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        <Border Name="GlowEffect" 
                Background="Transparent" 
                Height="40" 
                Margin="0,0,0,0" 
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect x:Name="GlowShadow" 
                                 Color="#FF00FF" 
                                 BlurRadius="20" 
                                 ShadowDepth="0" 
                                 Opacity="0.5"/>
            </Border.Effect>
        </Border>

        <Border Name="Notch" 
                Height="30" 
                Margin="0,5,0,0" 
                Padding="0"
                HorizontalAlignment="Left" 
                CornerRadius="15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#CC000000" Offset="0"/>
                    <GradientStop x:Name="GradientMidPoint" Color="#CC111111" Offset="0.5"/>
                    <GradientStop Color="#CC000000" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                 ShadowDepth="2" 
                                 Direction="270" 
                                 Color="Black" 
                                 Opacity="0.3"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TimeDisplay" 
                          Text="00:00" 
                          Margin="10,0,10,0"
                          Foreground="White" 
                          FontWeight="Bold"
                          FontFamily="Arial"
                          FontSize="20"
                          Padding="0"
                          VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="3" 
                                         ShadowDepth="1" 
                                         Direction="330" 
                                         Color="#FF00FF" 
                                         Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Canvas x:Name="VisualizerCanvas" 
                        Grid.Column="1" 
                        Height="30" 
                        Width="70"
                        Margin="0,0"
                        VerticalAlignment="Center"/>
                
                <!-- Particle System Canvas -->
                <Canvas x:Name="ParticleCanvas" 
                        Grid.Column="1" 
                        Height="30" 
                        Width="55"
                        Margin="0,0"
                        VerticalAlignment="Center"
                        IsHitTestVisible="False"/>

                <StackPanel Grid.Column="2" 
                           x:Name="MusicControls" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Visibility="Collapsed">
                    <Button x:Name="PrevButton" 
                            Click="PrevButton_Click"
                            Style="{StaticResource TransparentButton}"
                            Margin="10,0">
                        <Path Data="M4,2L4,14L10,8L4,2M11,2L11,14L17,8L11,2" 
                              Fill="White" 
                              Stretch="Uniform">
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="3" 
                                                 ShadowDepth="1" 
                                                 Direction="330" 
                                                 Color="#FF00FF" 
                                                 Opacity="0.5"/>
                            </Path.Effect>
                        </Path>
                    </Button>
                    <Button x:Name="PlayPauseButton" 
                            Click="PlayPauseButton_Click"
                            Style="{StaticResource TransparentButton}"
                            Margin="10,0">
                        <Path x:Name="PlayPauseIcon"
                              Data="M3,2L3,14L13,8L3,2" 
                              Fill="White" 
                              Stretch="Uniform">
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="3" 
                                                 ShadowDepth="1" 
                                                 Direction="330" 
                                                 Color="#FF00FF" 
                                                 Opacity="0.5"/>
                            </Path.Effect>
                        </Path>
                    </Button>
                    <Button x:Name="NextButton" 
                            Click="NextButton_Click"
                            Style="{StaticResource TransparentButton}"
                            Margin="10,0,10,0">
                        <Path Data="M11,2L11,14L17,8L11,2M4,2L4,14L10,8L4,2" 
                              Fill="White" 
                              Stretch="Uniform">
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="3" 
                                                 ShadowDepth="1" 
                                                 Direction="330" 
                                                 Color="#FF00FF" 
                                                 Opacity="0.5"/>
                            </Path.Effect>
                        </Path>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>